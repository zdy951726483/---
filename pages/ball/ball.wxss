.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.list .btnList {
  width: 90%;
  height: 84px;
  background: #FFFFFF;
  box-shadow: 0px 5px 9px 1px rgba(75, 116, 241, 0.08);
  border-radius: 4px;
  font-size: 15px;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  /* line-height: 84px; */
  margin: 12px auto;
  box-sizing: border-box;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnList .icon {
  width: 45px;
  height: 45px;
  background: #E8EDFD;
  border-radius: 50%;
  overflow: hidden;
}

.btnList .icon image {
  width: 100%;
  height: 100%;
}

.btnList .text {
  flex: 1;
  margin: 0 10px;
}
.btnList .right {
  /* flex: 1; */
  width: 45px;
  height: 45px;
  font-size: 32px;
}

.right image {
  width: 100%;
  height: 100%;
}