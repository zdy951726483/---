/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  /* margin-top: 200px; */
}
.box{
  line-height: 40px;
  font-size: 16px;
  box-shadow:0px 3px 8px 0px rgba(162,162,162,0.17);
  border-radius:5px;
  padding: 10px;
}
.box button{
  display: inline-block;
  vertical-align: middle;
}
input{
  border-bottom: 1px solid #eee;
  display: inline-block;
  vertical-align: middle;
  /* text-indent: 20px; */
  padding-left: 20rpx;
}
.litt{
  padding: 10px;
  font-size:14px;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.title{
  text-align: center;
  margin-bottom: 20px;
}
.submitBtn{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  background:#3178FD;
  color: #fff;
  box-shadow:0px 3px 8px 0px rgba(162,162,162,0.17);
  z-index: 1000;
}
.inline{
  display: inline-block;
}